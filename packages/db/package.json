{
  "name": "@lorrigo/db",
  "description": "Database package for Lorrigo",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx prisma generate --schema=./schema/schema.prisma && tsc",
    "db:generate": "npx prisma generate --schema=./schema/schema.prisma",
    "db:push": "prisma db push --schema=./schema/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema=./schema/schema.prisma",
    "db:gin-indexes": "node migrations/apply-indexes.js",
    "db:setup": "npm run db:push && npm run db:gin-indexes",
    "studio": "npx prisma studio --schema=./schema/schema.prisma --browser none",
    "postinstall": "prisma generate --schema=./schema/schema.prisma"
  },
  "author": "<aloksharma.cs1@gmail.com> Alok Sharma",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20",
    "prisma": "^6.7.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "6.7.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client.js"
  }
}
