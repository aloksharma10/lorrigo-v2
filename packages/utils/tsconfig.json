{
  "extends": "@lorrigo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "moduleResolution": "node",
  "module": "CommonJS",
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
