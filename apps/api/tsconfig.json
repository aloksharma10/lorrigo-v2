{
  "extends": "@lorrigo/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "files": true
  },
  "moduleResolution": "node",
  "module": "CommonJS",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}