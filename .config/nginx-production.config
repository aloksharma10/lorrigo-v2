# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name stagingv2.lorrigo.com www.stagingv2.lorrigo.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name stagingv2.lorrigo.com www.stagingv2.lorrigo.com;

    ssl_certificate /etc/ssl/certs/selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/selfsigned.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256';

    ssl_stapling on;
    ssl_stapling_verify on;

    # Optimize connection handling
    keepalive_timeout 65;
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;

    root /var/www/html;
    index index.html index.htm;

    # Enable Gzip Compression
    gzip on; 
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_http_version 1.1;	 
    gzip_buffers 16 8k;
    gzip_min_length 256;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # ============================
    # Proxy to Next.js (including /api/auth)
    # ============================
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;

        # Critical headers for NextAuth.js / Auth.js
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Websocket upgrade
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_cache_bypass $http_upgrade;

        proxy_buffer_size 128k;
        proxy_buffers 64 256k;
        proxy_busy_buffers_size 512k;

        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        client_max_body_size 100M;
    }

    # ============================
    # Separate API backend
    # ============================
    location /api/v2 {
        proxy_pass http://127.0.0.1:4000/api/v2;
        proxy_http_version 1.1;

        # Forward actual client IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_cache_bypass $http_upgrade;

        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;

        client_max_body_size 100M;
    }

    # Custom error page for bad gateway
    error_page 502 503 504 /custom_502.html;
    location = /custom_502.html {
        root /var/www/html;
        internal;
    }
}
