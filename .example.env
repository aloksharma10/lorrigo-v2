# Database
DATABASE_URL="postgresql://username:password@localhost:5432/lorrigo?schema=public"

# Server
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# API
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=lorrigo:

# Queue
QUEUE_CONCURRENCY=3

# Logging
LOG_LEVEL=info

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001 